<h2>favorites#show</h2>
<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Image</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @favorite_posts.each do |f| %>
      <tr>
        <td><%= f.content %></td>
        <td><%= image_tag f.image.url %></td>
        <td><%= f.user.name %></td>
        <td><%= link_to 'Show', f %></td>
        <td><%= link_to 'Edit', edit_post_path(f) %></td>
        <td><%= link_to 'Destroy', f, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

