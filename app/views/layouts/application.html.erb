<!DOCTYPE html>
<html>
  <head>
    <title>Iclone</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% if logged_in? %>
      <ul>
        <li><%= link_to "プロフィール", user_path(current_user.id) %></li>
        <li><%= link_to "ログアウト", session_path(current_user.id), method: :delete %></li>
        <li><%= link_to '投稿一覧へ', posts_path %></li>
        <li><%= link_to '写真投稿画面へ', new_post_path %></li>
    <% else %>
        <li><%= link_to "ユーザー登録", new_user_path %></li>
        <li><%= link_to "ログイン", new_session_path %></li>
      </ul>
    <% end %>
    <% flash.each do |key, value| %>
      <%= content_tag(:div, value, class: "#{key}") %>
    <% end %>
    <%= yield %>
  </body>
</html>
