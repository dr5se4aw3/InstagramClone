<!DOCTYPE html>
<html>
  <head>
    <title>Iclone</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <header>
      <div class="header_container">
        <div class="btn_group">
          <% if logged_in? %>
              <button type="button" class="btn btn-info btn-lg" role="button"><%= link_to "プロフィール", user_path(current_user.id) %></button>
              <button type="button" class="btn btn-danger btn-lg" role="button"><%= link_to "ログアウト", session_path(current_user.id), method: :delete %></button>
              <button type="button" class="btn btn-success btn-lg" role="button"><%= link_to '投稿一覧', posts_path %></button>
              <button type="button" class="btn btn-primary btn-lg" role="button"><%= link_to '新規投稿', new_post_path %></button>
          <% else %>
              <button type="button" class="btn btn-primary btn-lg" role="button"><%= link_to "ユーザー登録", new_user_path %></button>
              <button type="button" class="btn btn-primary btn-lg" role="button"><%= link_to "ログイン", new_session_path %></button>
          <% end %>
        </div>
      </div>
      <% flash.each do |key, value| %>
        <%= content_tag(:div, value, class: "#{key}") %>
      <% end %>
  </header>
    <%= yield %>
  </body>
</html>
