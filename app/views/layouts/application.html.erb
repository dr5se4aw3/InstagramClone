<!DOCTYPE html>
<html>
  <head>
    <title>Iclone</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <link href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet">
  </head>

  <body>
    <header>
      <div class="header_container">
        <div class="header_left">

        </div>
        <h2>Instagram Clone</h2>
        <div class="header_right">
          <% if logged_in? %>
              <%= link_to "プロフィール", user_path(current_user.id), class: "btn btn-info btn-lg" %>
              <%= link_to "ログアウト", session_path(current_user.id), method: :delete , class: "btn btn-danger btn-lg" %>
              <%= link_to '投稿一覧', posts_path, class: "btn btn-success btn-lg"  %>
              <%= link_to '新規投稿', new_post_path, class: "btn btn-primary btn-lg"  %>
              <%= link_to 'お気に入り', favorite_path(current_user.id), class: "btn btn-primary btn-lg"  %>
          <% else %>
              <%= link_to "ユーザー登録", new_user_path, class: "btn btn-primary btn-lg"  %>
              <%= link_to "ログイン", new_session_path, class: "btn btn-primary btn-lg"  %>
          <% end %>
        </div>
      </div>
      <div class="flash_message">
        <% flash.each do |key, value| %>
          <%= content_tag(:div, value, class: "#{key}") %>
        <% end %>
      </div>
  </header>
    <%= yield %>
  </body>
</html>
